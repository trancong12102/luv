{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "files": { "maxSize": 5242880 },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "attributePosition": "auto",
    "ignore": [".vscode", ".idea", "dist", "pnpm-lock.yaml"]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "all": true
      }
    },
    "ignore": [
      "dist",
      "**/*.js",
      "**/*.mjs",
      "**/*.cjs",
      "*.spec.ts",
      "*.test.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "trailingComma": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  }
}
